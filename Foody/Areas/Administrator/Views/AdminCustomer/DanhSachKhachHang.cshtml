@model IEnumerable<Foody.Models.Customer>

@{
    ViewBag.Title = "DanhSachKhachHang";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .text-middle {
        vertical-align: middle;
    }
</style>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><small> Danh sách cửa hàng</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">

                </p>
                <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FullName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Mobile)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Avatar)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserType)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="vertical-align:middle;width:150px">
                                    @Html.DisplayFor(modelItem => item.FullName)
                                </td>
                                <td  style="vertical-align:middle;width:200px">
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td style="vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.Mobile)
                                </td>
                                <td style="vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td style="vertical-align:middle">
                                    ********
                                </td>
                                <td style="vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td style="vertical-align:middle">
                                    @if (item.Avatar != null)
                                    {
                                        <img src="@Html.DisplayFor(modelItem => item.Avatar)" width="100" />
                                    }
                                    else
                                    {
                                        <img src="@Html.DisplayFor(modelItem => item.FileData.URL)" width="100" />
                                    }
                                </td>
                                <td style="vertical-align:middle">
                                    @Html.DisplayFor(modelItem => item.UserType)
                                </td>
                                <td style="vertical-align:middle">
                                    <a href="@Url.Action("EditCustomer",new { CustomerID = item.CustomerID })" style="color:#0094ff"> Sửa</a>
                                    <a href="@Url.Action("DeleteCustomer",new { CustomerID = item.CustomerID })" style="color:#0094ff"> Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>