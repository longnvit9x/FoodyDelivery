@model IEnumerable<Foody.Models.Store>
@{
    ViewBag.Title = "QuanlyCuaHang";
    Layout = "~/Areas/Administrator/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .stt-store {
       background: #ddd;
        border: solid 3px #ddd;
        border-radius: 5px;
        color: #000;
    }
</style>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2><small> Danh sách cửa hàng</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="#">Settings 1</a>
                            </li>
                            <li>
                                <a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                  
                </p>
                <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().StoreName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().StoreBanner)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().OpenDoor)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().CloserDoor)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().ServiceCharge)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().ShippingFee)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Manner)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().StoreType)
                            </th>
                            <th ></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StoreName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </td>
                                <td>
                                    <img src="@Html.DisplayFor(modelItem => item.StoreBanner)" width="100" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OpenDoor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CloserDoor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServiceCharge)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ShippingFee)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Manner)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StoreType)
                                </td>
                                <td>
                                    <p id="ChuaXacThuc_@item.StoreID" onclick="updateSTT('@item.StoreID',0)"><a href="#">Chưa xác thực</a></p>
                                    <p id="XacThuc_@item.StoreID" onclick="updateSTT('@item.StoreID',1)"><a href="#">Xác thực</a></p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div id="BaseUrl"
     data-baseurl="@Context.Request.Url.GetLeftPart(UriPartial.Authority)@Url.Content("~/")"></div>
<script src="~/Areas/Administrator/Content/js/quanlycuahang.js"></script>