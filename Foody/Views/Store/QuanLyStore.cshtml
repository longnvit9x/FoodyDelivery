@using Foody.Models
@model PagedList.IPagedList<Store>
@using PagedList.Mvc
@{
    ViewBag.Title = "QuanLyStore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
<h4 class="text-center">Quản lý địa điểm</h4>
<br />
<p>
    @Html.ActionLink("Thêm địa điểm", "ThemStore")
</p>
<h5 class="text-warning"> @Session["Message"]</h5>
<table id="tbl-data" class="table table-striped table-bordered " style="width:100%">
     <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().StoreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().OpenDoor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CloserDoor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ServiceCharge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ShippingFee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Manner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().StoreType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().StoreBanner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ConditionShip)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().EndDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenDoor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CloserDoor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceCharge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoreType)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.StoreBanner)" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConditionShip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.ActionLink("Sửa", "ThongTin", new { StoreID = item.StoreID }) |
                @Html.ActionLink("Xóa", "Delete", new { StoreID = item.StoreID })
            </td>
        </tr>
    }
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="10">
                Không có dữ liệu
            </td>
        </tr>
    }
</table>
@Html.PagedListPager(Model, page => Url.Action("QuanLySale", new { StoreID = ViewBag.StoreID, page }))
}