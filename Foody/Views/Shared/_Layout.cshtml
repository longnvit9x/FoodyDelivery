<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/main.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <link href="~/Content/Index.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
     @*chart*@
    <script async="" src="//www.google-analytics.com/analytics.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.13.0/moment.min.js"></script>
    <script src="~/Scripts/chart/Chart.js"></script>
    <script src="~/Scripts/chart/Chart.bundle.js"></script>
    <script src="~/Scripts/chart/Chart.bundle.min.js"></script>
    <script src="~/Scripts/chart/utils.js"></script>
    @*end *@
</head>
<body>
    @Html.Partial("~/Views/Home/_QuangCao.cshtml")
    @Html.Action("MenuTop", "Home")
    <br />
    @RenderSection("header", false)
    @RenderSection("slide", false)
    <div class="body">
        <div class="row">
            <div class="col-sm-3 col-md-4 col-lg-3">
                <div id="menu-left">
                    @RenderSection("menuleft", false)
                </div>
            </div>
            <div class="col-sm-9 col-md-8 col-lg-9 ">
                @RenderSection("menusearch", false)
                <div>
                    @RenderBody()
                </div>
            </div>
        </div>
        @* footer *@
        <div style="clear:both"></div>
        @Html.Partial("~/Views/Home/_Footer.cshtml")
    </div>
    <div id="errorModalGlobal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 id="txtHeaderError" class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <p id="txtMsgError">Some text in the modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/config.js"></script>
    <script language="javascript" src="~/Scripts/Home.js"></script>
    <script src="~/Scripts/jgSlider.js"></script>
    @RenderSection("scripts", required: false)
    @RenderSection("jsFooter", required: false)
</body>
</html>
