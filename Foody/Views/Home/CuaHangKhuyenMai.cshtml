<link href="~/Content/cuahangkhuyenmai.css" rel="stylesheet" />
<div id="menu-cuahangkhuyenmai" style="padding:15px">
    <div class="row">
        <div class="row">
            <div class="col-md-9">
                <h3>
                    Cửa hàng đang khuyến mại
                </h3>
            </div>
            <div class="col-md-3">
                <!-- Controls -->
                <div class="controls pull-right hidden-xs">
                    <a class="left fa fa-chevron-left btn btn-success" href="#carousel-example"
                       data-slide="prev"></a><a class="right fa fa-chevron-right btn btn-success" href="#carousel-example"
                                                data-slide="next"></a>
                </div>
            </div>
        </div>
        <div id="carousel-example" class="carousel slide hidden-xs" data-ride="carousel">
            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <div class="row">
                        @{int i = 0; }
                        @for (i = 0; i < Model.Count; i++)
                        {
                            <div class="col-sm-3">
                                <div class="col-item">
                                    <div class="photo">
                                        <img src="@Model[i].StoreBanner" class="img-responsive" alt="a" />
                                    </div>
                                    <div class="info">
                                        <div class="store-detail">
                                            <h5>
                                                @Model[i].StoreName
                                            </h5>
                                            <p>
                                                @Model[i].Address
                                            </p>
                                        </div>
                                        <div class="row">
                                            <div class="price col-md-4">
                                                <h5>
                                                    Từ:@Model[i].OpenDoor
                                                </h5>
                                                <h5>
                                                    đến:@Model[i].CloserDoor
                                                </h5>
                                            </div>
                                            <div class="rating hidden-sm col-md-8">
                                                @{
                                                    int r = Int16.Parse(@Model[i].Rating.ToString());
                                                }
                                                @for (int k = 0; k < r / 2; k++)
                                                {
                                                    <i class="price-text-color fa fa-star"></i>
                                                }
                                                @if (r % 2 == 1)
                                                {
                                                    <i class="price-text-color fa fa-star-half-o"></i>
                                                }
                                                @for (int k = 0; k < (10 - r) / 2; k++)
                                                {
                                                    <i class="price-text-color fa fa-star-o"></i>
                                                }
                                            </div>
                                        </div>
                                        <div class="separator clear-left">
                                            <p class="btn-add">
                                                <i class="fa fa-shopping-cart"></i><a href="@Url.Action("XemChiTiet", "Store", new { @StoreID=Model[i].StoreID})" class="hidden-sm">Đặt Món</a>
                                            </p>
                                            <p class="btn-details">
                                                <i class="fa fa-list"></i><a href="#" class="hidden-sm">Bình luận</a>
                                            </p>
                                        </div>
                                        <div class="clearfix">
                                        </div>
                                    </div>
                                </div>
                            </div>
                                                        if ((i + 1) % 4 == 0 && (i + 1) >= 4)
                                                        {
                                                            break;
                                                        }
                                                    }
                    </div>
                </div>
                <div class="item">
                    <div class="row">
                        @for (i = 4; i < Model.Count; i++)
                        {
                            <div class="col-sm-3">
                                <div class="col-item">
                                    <div class="photo">
                                        <img src="@Model[i].StoreBanner" class="img-responsive" alt="a" />
                                    </div>
                                    <div class="info">
                                        <div class="store-detail">
                                            <h5>
                                                @Model[i].StoreName
                                            </h5>
                                            <p>
                                                @Model[i].Address
                                            </p>
                                        </div>
                                        <div class="row">
                                            <div class="price col-md-4 price-text-color">
                                                <h5>
                                                    Từ:@Model[i].OpenDoor
                                                </h5>
                                                <h5>
                                                    đến:@Model[i].CloserDoor
                                                </h5>
                                            </div>
                                            <div class="rating hidden-sm col-md-8">
                                                @{
                                                    int r = Int16.Parse(@Model[i].Rating.ToString());
                                                }
                                                @for (int k = 0; k < r / 2; k++)
                                                {
                                                    <i class="price-text-color fa fa-star"></i>
                                                }
                                                @if (r % 2 == 1)
                                                {
                                                    <i class="price-text-color fa fa-star-half-o"></i>
                                                }
                                                @for (int k = 0; k < (10 - r) / 2; k++)
                                                {
                                                    <i class="price-text-color fa fa-star-o"></i>
                                                }

                                            </div>
                                        </div>
                                        <div class="separator clear-left">
                                            <p class="btn-add">
                                                <i class="fa fa-shopping-cart"></i><a href="@Url.Action("XemChiTiet", "Store", new { @StoreID=Model[i].StoreID})" class="hidden-sm">Đặt món</a>
                                            </p>
                                            <p class="btn-details">
                                                <i class="fa fa-list"></i><a href="#" class="hidden-sm">Bình luận</a>
                                            </p>
                                        </div>
                                        <div class="clearfix">
                                        </div>
                                    </div>
                                </div>
                            </div>
                                                        if ((i + 1) % 4 == 0 && (i + 1) > 4)
                                                        {
                                                            break;
                                                        }
                                                    }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
